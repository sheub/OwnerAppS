{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
    <form class="form-signin" action="{{ path('fos_user_security_check') }}" method="post">
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        <p><i class="fas fa-bicycle fa-7x"></i></p>
        <h1 class="h3 mb-3 font-weight-normal">{{ 'security.login.msgSignIn'|trans }}</h1>
        <label for="username" class="sr-only">Email address</label>
        <input id="username" class="form-control" name="_username" value="{{ last_username }}" required="required"
               placeholder="{{ 'security.login.username'|trans }}" autofocus="" type="email">
        <label for="password" class="sr-only">Password</label>
        <input id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"
               class="form-control" type="password">
        <div class="checkbox mb-3">
            <label>
                <input id="remember_me" name="_remember_me" value="remember-me"
                       type="checkbox"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <div class="col">
            <a href="#" class="m-link">
                {{ 'security.login.forget_password'|trans }}
            </a>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>

        <p class="mt-5 mb-3 text-muted">Â© 2018</p>
    </form>
{% endblock fos_user_content %}
